<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">





        <EditText
            android:id="@+id/from_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="From"
            android:inputType="text" />


    <EditText
            android:id="@+id/to_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:inputType="text"
            android:layout_below="@+id/from_1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />


    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/numberPicker2"
        android:layout_alignEnd="@+id/datePicker2"
            android:layout_gravity="right" />

    <NumberPicker
        android:id="@+id/numberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/datePicker2"
        android:layout_toEndOf="@+id/datePicker" />

    <DatePicker
        android:layout_width="230dp"
        android:layout_height="211dp"
        android:id="@+id/datePicker"
        android:clickable="true"
        android:calendarViewShown="false"
        android:layout_below="@+id/to_1"
        android:layout_alignStart="@+id/datePicker" />

    <DatePicker
        android:layout_width="230dp"
        android:layout_height="211dp"
        android:id="@+id/datePicker2"
        android:calendarViewShown="false"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
